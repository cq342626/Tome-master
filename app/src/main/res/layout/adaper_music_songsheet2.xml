<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_3"
    android:layout_marginRight="@dimen/dp_3"
    android:layout_marginTop="@dimen/dp_3"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@color/white"
    app:cardCornerRadius="@dimen/CardView_Radius"
    app:cardElevation="@dimen/CardView_Elevation"
    app:cardMaxElevation="@dimen/CardView_MaxElevation">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/adapter_music_song_sheet_background"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/adapter_music_song_sheet_playCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/head_listener"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="播放次数"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/dp_8"
            app:layout_constraintRight_toRightOf="@id/adapter_music_song_sheet_background"
            app:layout_constraintTop_toTopOf="@id/adapter_music_song_sheet_background" />

        <ImageView
            android:id="@+id/adapter_music_song_sheet_user_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="@dimen/dp_5"
            app:layout_constraintBottom_toBottomOf="@id/adapter_music_song_sheet_background"
            app:layout_constraintLeft_toLeftOf="@id/adapter_music_song_sheet_background" />

        <TextView
            android:id="@+id/adapter_music_song_sheet_user_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="用户名"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/adapter_music_song_sheet_background"
            app:layout_constraintLeft_toRightOf="@id/adapter_music_song_sheet_user_image" />

        <ImageView
            android:id="@+id/adapter_music_song_sheet_play"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/play_circle_outlin"
            android:layout_marginRight="@dimen/dp_5"
            app:layout_constraintBottom_toBottomOf="@id/adapter_music_song_sheet_background"
            app:layout_constraintRight_toRightOf="@id/adapter_music_song_sheet_background" />

        <TextView
            android:id="@+id/adapter_music_song_sheet_explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/adapter_music_song_sheet_background" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>